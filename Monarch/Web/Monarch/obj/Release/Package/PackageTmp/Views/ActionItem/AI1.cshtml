                <div id="cocoon" style="position:absolute; z-index:1; margin-top:225px; margin-left:218px;">
                    <img src="~/Content/images/cocoon_2x.png" style="width:59px;" />
                </div>

                <!-- next and prev buttons-->

                <div id="next" style=" position:absolute; margin-left:459px; margin-top:277px; z-index:1">
