
@{
    ViewBag.Title = "AI1";
}

<link href="~/Content/animation.css" rel="stylesheet" />

<style type="text/css">

    #close img:first-child {
        position: absolute;
        -webkit-transition: opacity 0s ease-in-out;
        -moz-transition: opacity 0s ease-in-out;
        -o-transition: opacity 0s ease-in-out;
        transition: opacity 0s ease-in-out;
    }

        #close img:first-child:hover {
            opacity: 0;
        }

    .Yes-Btns img:first-child {
        position: absolute;
        -webkit-transition: opacity 0s ease-in-out;
        -moz-transition: opacity 0s ease-in-out;
        -o-transition: opacity 0s ease-in-out;
        transition: opacity 0s ease-in-out;
    }

        .Yes-Btns img:first-child:hover {
            opacity: 0;
        }

    .No-Btns img:first-child {
        position: absolute;
        -webkit-transition: opacity 0s ease-in-out;
        -moz-transition: opacity 0s ease-in-out;
        -o-transition: opacity 0s ease-in-out;
        transition: opacity 0s ease-in-out;
    }

        .No-Btns img:first-child:hover {
            opacity: 0;
        }

    #next img:first-child {
        position: absolute;
        -webkit-transition: opacity 0s ease-in-out;
        -moz-transition: opacity 0s ease-in-out;
        -o-transition: opacity 0s ease-in-out;
        transition: opacity 0s ease-in-out;
    }

        #next img:first-child:hover {
            opacity: 0;
        }

    #next-button2 img:first-child {
        position: absolute;
        -webkit-transition: opacity 0s ease-in-out;
        -moz-transition: opacity 0s ease-in-out;
        -o-transition: opacity 0s ease-in-out;
        transition: opacity 0s ease-in-out;
    }

        #next-button2 img:first-child:hover {
            opacity: 0;
        }

    #cocoon {
        -webkit-transform-origin: center 20%;
        -webkit-animation: shake 1s infinite alternate;
        -moz-transform-origin: center 20%;
        -moz-animation: shake 1s infinite alternate;
        -ms-transform-origin: center 20%;
        -ms-animation: shake 1s infinite alternate;
        transform-origin: center 20%;
        animation: shake 1s infinite alternate;
    }

    .modal-backdrop {
        z-index:0;
    }

    #video-modal .modal-backdrop.in{
        opacity:0;
    }

</style>

<audio id="background" preload="auto">
    <source src="~/Content/sound/TitleScreen_Background.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>
<audio id="head" preload="auto">
    <source src="~/Content/sound/Title Screen.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>
<audio id="click" preload="auto">
    <source src="~/Content/sound/ButtonClick.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

<script type="text/javascript">

    var bgMusic = $("#background")[0],
    playing = true;

    bgMusic.addEventListener('ended', function () {
        this.currentTime = 0;
        if (playing) {
            this.play();
        }
    }, false);

    background.play();

    head.play();

    $(document).ready(function () {

        $("#close").hide();

        $("#next-button2").hide();

        $('#next').click(function () {
            click.load();
            click.play();
            $("#title").fadeOut(1000);
            $("#close").fadeIn(1000);
            $("#video-modal").modal('show');
            $("#next-button2").fadeIn(10000);
        });

        $('#close').click(function () {
            $('#game-close').modal('show');
        });

        $('.No-Btns').click(function () {
            $('#game-close').modal('hide');
        });

    });

</script>

<div class="container body-content">
    <div class="col-md-12">
        <div class="row">

            <div id="title">
                @*<div style="position:absolute; z-index:1; margin-top:1px;">
                    <img src="~/Content/images/title.png" style="width:616px;" />
