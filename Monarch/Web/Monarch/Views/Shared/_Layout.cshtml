<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Change My World Now</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)

    <style type="text/css">
        .ai_background {
            background-color: #7829bb;
            width: 622px;
            padding: 3px;
            position: absolute;
        }

        .ai-margin {
            margin: 3px;
        }

        .custom-font {
            font-family: 'cmwn';
        }

        .game-title {
            font-size: 42px;
            color: white;
        }

        .game-text {
            font-size: 28px;
            color: white;
        }

        .bkg-image img {
            width: 616px;
        }

        .text-left {
            margin: 5px;
        }

        .button-close {
            width: 100px;
            height: 40px;
            background: #7829bb;
            text-align: center;
            margin-left: 139px;
            margin-top: 250px;
        }

            .button-close a {
                font-size: 18px;
                color: #ffffff;
            }

        .modal-backdrop {
            background-color: #7829bb;
            opacity: .2;
            filter: alpha(opacity=20);
            width: 100%;
            height: 100%;
            position: absolute;
            z-index: 1;
            margin: 0 auto;
        }

        .fade .in {
            position: absolute;
        }


        .modal {
            overflow-y: hidden;
        }


        .purple-button {
            width: 180px;
            height: 32px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #7829bb;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .green-button {
            width: 180px;
            height: 32px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #58CC20;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .button-text a {
            font-size: 20px;
            color: white;
        }

        .button-padding {
            padding: 0px 50px 0px 50px;
        }
    </style>

    <script type="text/javascript">

        $(document).ready(function () {

            $('#pop-up').modal('show');



            //to use the close modal, use this function

            $('.close-Btn').click(function () {
                $('#game-info').modal('show');
            });

            /* Exp: <div id="close">
            <div class="col-sm-4 content-box">
            <img src="~/Content/images/btn_close.png" class="img-responsive" alt="Responsive image">
            </div>*/

            $('.A').click(function () {
                $("#level-complete").modal('show');

            });

            $('.B').click(function () {
                $("#retry-level").modal('show');

            });

            $('.purple-button').click(function () {
                $('#retry-level').modal('hide')
            });

            $('.close-Btn').click(function () {
                $("#retry-level").modal('show');

            });

            $('.close-Btn').click(function () {
                $("#game-info").modal('hide');

            });

        });

    </script>

</head>
<body>

    <div class="container body-content">
        <div class="col-md-12 ai_background">
            <div class="row">

                <div class="col-md-12 custom-font game-title">
                    <div class=" text-left">
                        <img style="width:72px; height:72px;" src="~/Content/images/monarch_white.png" />
                        MONARCH
                    </div>

                    <div class="col-md-2 text-right">
                        <div class="row">
                            <div class="col-md-12">
                                <span style="font-size:18px;">@ViewBag.UserName</span>
                            </div>
                        </div><!--end row-->
                    </div><!--end text-right-->

                </div><!--end custom-font game title-->
                @RenderBody()

