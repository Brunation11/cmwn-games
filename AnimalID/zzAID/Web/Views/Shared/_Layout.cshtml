<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Change My World Now</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)

    <style type="text/css">
        .container {
            margin-left:0px;
            margin-top:0px;
            padding-left:0px;
        }
        .container body-content {
            width:621px;
            height:515px;
        }
        .ai_background {
            background-color: #7829bb;
            width: 622px;
            padding: 3px;
            position:absolute;
        }

        .ai-margin {
            margin: 3px;
        }

        .custom-font {
            font-family: 'cmwn';
        }

        .game-title {
            font-size: 42px;
            color: white;
        }

        .game-text {
            font-size: 28px;
            color: white;
        }

        .bkg-image img {
            width: 616px;
        }

        .text-left {
            margin: 5px;
        }

        .button-close {
            width: 100px;
            height: 40px;
            background: #7829bb;
            text-align: center;
            margin-left: 139px;
            margin-top: 250px;
        }

        .button-close a {
            font-size: 18px;
            color: #ffffff;
        }
        .modal-backdrop{
            background-color: #7829bb;           
            opacity: .2;
            filter: alpha(opacity=20);
            width: 100%;
            height: 100%;
            position: absolute;
            margin: 0 auto;
        }
        .fade .in{
            position:absolute;
        }


        .modal {
            overflow-y:hidden;
        }

        .A {
        display:none;
        }


        .B {
        display:none;
        }

        .purple-button {
            width: 180px;
            height: 32px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #7829bb;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .green-button {
            width: 180px;
            height: 32px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #58CC20;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .button-text a{
            font-size: 20px;
            color: white;
        }
        .button-padding{
            padding: 0px 50px 0px 50px;
        }
    </style>

<script type="text/javascript">
    
        var start = document.getElementById("title_screen");
        var correct = document.getElementById("btn_yes");
        var complete = document.getElementById("btn_wrong");
        var load = document.getElementById("other_screen");
        var fin = document.getElementById("final");
        var lio = document.getElementById("lion");
        var dol = document.getElementById("dolphin");
        
        
       




    $(document).ready(function () {

            $('.purple-button').click(function () {
                $('#retry-level').modal('show')
            });

            $("#close-Btn").click(function () {
                $('#pop-up').modal('show');

            });

    });
    </script>
    
</head>
<body>

    <audio id="btn_wrong" preload="auto">
        <source src="~/Content/sound/Incorrect Sound (mp3cut.net).mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <audio id="title_screen" preload="auto">
        <source src="~/Content/sound/Title Screen Load.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <audio id="btn_yes" preload="auto">
        <source src="~/Content/sound/Correct Sound.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <audio id="other_screen" preload="auto">
        <source src="~/Content/sound/Selection Screen.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
   
    <audio id="final" preload="auto">
        <source src="~/Content/sound/Get Flip Screen.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <audio id="lion" preload="auto">
        <source src="~/Content/sound/Lion.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <audio id="dolphin" preload="auto">
        <source src="~/Content/sound/Dolphin.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>



    <div class="container body-content">
        <div class="col-md-12 ai_background">
            <div class="row">

                <div class="col-md-12 custom-font game-title">
                    <div class=" text-left">
                        <img style="width:72px; height:72px;margin-bottom:3px;" src="~/Content/images/AnimalID_white.png" />
                        ANIMAL ID
                    </div>
                    
                    

                    <div class="col-md-2 text-right">
                        <div class="row">
                            <div class="col-md-12">
                                <span style="font-size:18px;">@ViewBag.UserName</span>
                            </div>
                        </div><!--end row-->
                    </div><!--end text-right-->

                </div><!--end custom-font game title-->
                @RenderBody()

                <div class="col-md-12 bkg-image">
                    <img src="~/Content/images/bkg.png" />
                </div><!-- end bkg-image-->



                    <div class="modal fade" id="game-info" tabindex="-1" role="dialog" aria-labelledby="actionCompleteLabel" aria-hidden="false" style="z-index:999;position:absolute;">
                        <div class="modal-dialog" style="margin-top: 207px;  margin-left: 85px;">
                            <div class="modal-content" style="width:420px; height:315px;">
                                <div class="blue-border" style="margin-left:-5px; margin-top:-7px; width:430px; height:325px;">
                                    <div class="modal-body custom-font modal-text">

                                        <div class="second-slide">
                                            <h1>Close Modal</h1>


                                        </div><!--end second-slide-->
                                        <div class="purple-button text-center custom-font button-text button-padding">

                                            <a href="#">Close</a>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                      <div class="modal fade" id="pop-up" tabindex="-1" role="dialog" aria-labelledby="actionCompleteLabel" aria-hidden="false"position:absolute;">
                        <div class="modal-dialog" style="margin-left: 193px;margin-top: 207px;  margin-left: 85px;">
                            <div class="modal-content" style="width:420px; height:315px;">
                                <div class="blue-border" style="margin-left:-5px; margin-top:-7px; width:430px; height:325px;">
                                    <div class="modal-body custom-font modal-text">

                                        <div class="second-slide">
                                            <h1>Load Modal</h1>


                                        </div><!--end second-slide-->

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                 <!-- <div class="modal fade" id="level-complete" tabindex="-1" role="dialog" aria-labelledby="actionCompleteLabel" aria-hidden="false" style="z-index:999;position:absolute;">
                        <div class="modal-dialog" style="margin-left: 193px;margin-top: 207px;  margin-left: 85px;">
                            <div class="modal-content" style="width:420px; height:315px;">
                                <div class="blue-border" style="margin-left:-5px; margin-top:-7px; width:430px; height:325px;">
                                    <div class="modal-body custom-font modal-text">

                                        <div class="second-slide">
                                            <h1>Game Complete</h1>


                                        </div><!--end second-slide

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>-->

                    <div class="modal fade" id="retry-level" tabindex="-1" role="dialog" aria-labelledby="actionCompleteLabel" aria-hidden="false" style="z-index:999;position:absolute;">
                        <div class="modal-dialog" style="margin-left: 193px;margin-top: 207px;  margin-left: 85px;">
                            <div class="modal-content" style="width:420px; height:315px;">
                                <div class="blue-border" style="margin-left:-5px; margin-top:-7px; width:430px; height:325px;">
                                    <div class="modal-body custom-font modal-text">

                                        <div class="second-slide">
                                            <h1>Retry Game</h1>


                                        </div><!--end second-slide-->
                                        <div class="purple-button text-center custom-font button-text button-padding">

                                            <a href="#">Close</a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>




                </div><!--end row-->

        </div><!--end ai_background-->
    </div><!--end container body-content-->













</body>
</html>
