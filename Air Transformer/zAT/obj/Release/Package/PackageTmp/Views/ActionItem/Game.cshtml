@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Change My World Now</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")

    <style type="text/css">
        .ai_background {
            background-color: #7829bb;
            padding-top: 10px;
            width: 600px;
            padding-bottom: 20px;
        }

        .ai-margin {
            margin-left: 5px;
        }

        .custom-font {
            font-family: 'cmwn';
        }

        .game-title {
            font-size: 60px;
            color: white;
        }

        .game-text {
            font-size: 28px;
            color: white;
        }

        .content-title {
            font-size: 28px;
            color: #7829bb;
        }

        .content-text {
            font: normal 18px verdana;
            color: black;
        }

        .content-margin {
            margin-top: 40px;
            margin-left: 40px;
            margin-right: 30px;
        }

        .content-box {
            width: 590px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #fff;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .purple-button {
            width: 180px;
            height: 32px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #7829bb;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .green-button {
            width: 180px;
            height: 32px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #58CC20;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .button-text {
            font-size: 20px;
            color: white;
        }

        .modal-backdrop {
            background-color: #7829bb;
            opacity: .2;
            filter: alpha(opacity=20);
            width: 100%;
            height: 100%;
            position: absolute;
            margin: 0 auto;
        }

        .modal-dialog {
            width: 490px;
        }

        .modal-text {
            font-size: 28px;
            color: #7829bb;
        }

        .list-text {
            font-size: 18px;
        }

        .list {
            margin-left: -71px;
            padding-right: 0px;
            list-style-type: none;
            color: black;
        }

        .list li {
            border: 1px solid #E6E6E6;
            margin-top: -1px;
            padding-top: 5px;
            padding-left: 5px;
            padding-bottom: 5px;
        }

        .list li:hover {
            background-color: #96d5ea;
            color: white;
        }

        .list a {
            text-decoration: none;
        }

        .list a:hover {
            color: white;
        }

        .track-box {
            border: 1px solid #E6E6E6;
            -webkit-box-shadow: 0 2px 3px rgba(204, 204, 204, 1);
            -moz-box-shadow: 0 2px 3px rgba(204, 204, 204, 1);
            box-shadow: 0 2px 3px rgba(204, 204, 204, 1);
        }

        .track-body-text {
            font-size: 21px;
            line-height: 24px;
            color: #333333;
        }

        .track-text {
            font-size: 10pt;
        }
    </style>

</head>
<body>
    <div class="text-center">
        <span class="custom-font content-title">
            AIR TRANSFORMERS
        </span>
    </div>

    <div class="container">
        <div class="row">
            <div class="span10 offset2">
                    <div class="text-center">
                        @Html.Partial("_game")
                   
                    </div>

                </div>
            </div>
        </div>
    <div class="text-center" style="margin-top:32px;">
        <a href="http://arcade.changemyworldnow.com" class="purple-button custom-font game-text" style="width:150px;">Back to Arcade</a>
    </div>
</body>
</html>