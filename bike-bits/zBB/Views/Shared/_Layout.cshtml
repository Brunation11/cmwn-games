<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Change My World Now</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)

    <style type="text/css">



        .container body-content {
            width:621px;
            height:515px;
        
        }
        .ai_background {
            background-color: #7829bb;
            padding-top: 10px;
            width: 622px;
            padding-bottom: 20px;
            margin-left: -14px;
            position: absolute;
            height: 515px;
        }

        .ai-margin {
            margin-left: 5px;
        }

        .custom-font {
            font-family: 'cmwn';
        }

        .game-title {
            font-size: 60px;
            color: white;
            margin-left: 80px;
  /* padding-left: 33px; */
            position: absolute;
            margin-top: -6px;
            }

        .game-text {
            font-size: 28px;
            color: white;
        }

        .content-title {
            font-size: 28px;
            color: #7829bb;
        }

        .content-text {
            font: normal 18px verdana;
            color: black;
        }

        .content-margin {
            margin-top: 40px;
            margin-left: 40px;
            margin-right: 30px;
        }

        .content-box {
            width: 590px;
        }

        .purple-button {
            width: 180px;
            height: 32px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #7829bb;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .green-button {
            width: 180px;
            height: 32px;
            margin: 0px 0 0;
            padding: 8px 3px 3px 5px;
            background-color: #58CC20;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }

        .button-text {
            font-size: 20px;
            color: white;
        }

        .modal-backdrop {
            background-color: #7829bb;
            opacity: .2;
            filter: alpha(opacity=20);
            width: 100%;
            height: 100%;
            position: absolute;
            margin: 0 auto;
        }


        .modal {
            overflow-y: hidden;
            overflow-x: hidden;
        }

        .modal-open .modal {
    overflow-x: hidden;
    overflow-y: hidden;
}


    .fade.in {
  
  
  position: absolute;
}

        .modal-dialog {
            width: 490px;
        }

        .modal-text {
            font-size: 28px;
            color: #7829bb;
        }

        .list-text {
            font-size: 18px;
        }

        .list {
            margin-left: -71px;
            padding-right: 0px;
            list-style-type: none;
            color: black;
        }

            .list li {
                border: 1px solid #E6E6E6;
                margin-top: -1px;
                padding-top: 5px;
                padding-left: 5px;
                padding-bottom: 5px;
            }

                .list li:hover {
                    background-color: #96d5ea;
                    color: white;
                }

            .list a {
                text-decoration: none;
            }

                .list a:hover {
                    color: white;
                }

        .track-box {
            border: 1px solid #E6E6E6;
            -webkit-box-shadow: 0 2px 3px rgba(204, 204, 204, 1);
            -moz-box-shadow: 0 2px 3px rgba(204, 204, 204, 1);
            box-shadow: 0 2px 3px rgba(204, 204, 204, 1);
        }

        .track-body-text {
            font-size: 21px;
            line-height: 24px;
            color: #333333;
        }

        .track-text {
            font-size: 10pt;
        }


        h2 {
            font-size: 27px;
            text-align: center;
            width: 212px;
            margin-left: 81px;
            line-height: 27px;
            margin-top: 71px;
            font-family: 'Source Sans Pro';
        }

        #option1 {
            width: 100px;
            height: 30px;
        }

        #option2 {
            width: 100px;
            height: 30px;
        }


        .flip-off img {
            -webkit-transition: opacity 0s ease-in-out;
            -moz-transition: opacity 0s ease-in-out;
            -o-transition: opacity 0s ease-in-out;
            transition: opacity 0s ease-in-out;
        }

            .flip-off img:hover {
                opacity: 0;
            }

            #position{
    position:relative;
}

    </style>

    <script type="text/javascript">
        $(document).ready(function () {
            //$('#game-complete').modal('hide');            
            $('.text-modal').append("<p>Are you sure you want to quit?</p>");
            

            $("#close").click(function () {
                $('#game-complete').modal('show');
               
            });

           
          

          


            $("#no").click(function () {
                $('#game-complete').modal('hide');
            });
        })
    </script>

</head>
<body>

    <div id="position">
        <div class="container body-content">
            <div class="col-md-12 ai_background">
                <div class="row">

                    
                    <div class="col-md-12 custom-font game-title">
                        <div class=" text-left">
                            <img style="width:72px; height:72px;margin-bottom:15px; margin-left:-86px;" src="~content/images/bikebits_white.png" />
                            BIKE BITS
                        </div>
                        <div class="col-md-2 text-right">
                            <div class="row">
                                <div class="col-md-12">
                                    <span style="font-size:18px;">@ViewBag.UserName</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    @RenderBody()


                    <div class="modal fade" id="game-complete" tabindex="-1" role="dialog" aria-labelledby="actionCompleteLabel" aria-hidden="false">
                        <div class="modal-dialog" style="margin-left: 118px; top:85px;">
                            <div class="modal-content" style="width:393px; height:310px;">
                                <h2><strong>Are you sure you want to quit?</strong></h2>
                            </div>
                            <div class="blue-border" style="margin-left:-5px; margin-top:-7px; width:405px; height:325px;">
                                <div class="modal-body custom-font modal-text">

                                    <div class="popup-image" style="margin-left: -42px; margin-top: -87px;">
                                        <img src="~content/images/chain_frame.png" style="width:451px; margin-top:-259px; height:370px;" />


                                        <div id="yes">
                                            <a href="/ActionItem/AI1">
                                                <div id="option1">
                                                    <div class="flip-on"> <img src="~content/images/yes1.png" style="position: absolute; margin-top: -196px; margin-left: 237px; width: 126px;" alt="yes" /></div>
                                                    <div class="flip-off style=" margin-bottom 150px;z-index:9;"> <img src="~content/images/yes3.png" style="position: absolute; margin-top: -196px; margin-left: 237px; width: 126px;" alt="yes" /></div>
                                                </div>
                                            </a>
                                        </div>





                                        <div id="no">
                                            <div id="option2">
                                                <div class="flip-on"><img src="~content/images/no2.png" style="position: absolute; margin-top: -219px; margin-left: 237px; width: 110px;" alt="no" /></div>
                                                <div class="flip-off"><img src="~content/images/no3.png" style="position: absolute; margin-top: -219px; margin-left: 237px; width: 110px;" alt="no" /></div>
                                            </div>
                                        </div>
                                    </div><!--end popup-image-->
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>





</body>
</html>
